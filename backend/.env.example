# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration (Banco de Relatos)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/burnout-reports?retryWrites=true&w=majority

# PostgreSQL Configuration (Banco Agregado)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=burnout_aggregated
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# Security
HASH_SALT=your-secret-salt-here-change-this
JWT_SECRET=your-jwt-secret-here-change-this

# Cloudflare Worker URL (Proxy de Anonimização)
CLOUDFLARE_WORKER_URL=https://your-worker.workers.dev

# CORS
ALLOWED_ORIGINS=http://localhost:3001,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10
